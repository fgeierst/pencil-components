{
  "name": "pencil-components",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/pencil-components/pencil-components.esm.js",
  "exports": {
    ".": {
      "import": "./dist/pencil-components/pencil-components.esm.js",
      "require": "./dist/pencil-components/pencil-components.cjs.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/stencil-component-starter.git"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build",
    "build:watch": "stencil build --watch",
    "start": "stencil build --dev --watch --serve",
    "test": "vitest",
    "test:storybook": "test-storybook",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "storybook:preview": "stencil build && storybook build && npx http-server ./storybook-static"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@stencil/core": "^4.38.3",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/test-runner": "^0.24.1",
    "@storybook/web-components-vite": "^10.0.8",
    "@types/node": "^24.10.1",
    "@vitest/browser": "^4.0.12",
    "@vitest/browser-playwright": "^4.0.12",
    "lit": "^3.3.1",
    "playwright": "^1.56.1",
    "playwright-chromium": "^1.56.1",
    "storybook": "^10.0.8",
    "vitest": "^4.0.12",
    "vitest-browser-lit": "^1.0.1"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "playwright-chromium",
      "unrs-resolver"
    ],
    "overrides": {
      "vite": "npm:rolldown-vite@latest"
    }
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
