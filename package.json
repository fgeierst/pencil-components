{
  "name": "pencil-components",
  "version": "0.0.1",
  "description": "Stencil Component Starter",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/pencil-components/pencil-components.esm.js",
  "exports": {
    ".": {
      "import": "./dist/pencil-components/pencil-components.esm.js",
      "require": "./dist/pencil-components/pencil-components.cjs.js"
    },
    "./my-component": {
      "types": "./dist/components/my-component.d.ts",
      "import": "./dist/components/my-component.js"
    },
    "./loader": {
      "types": "./loader/index.d.ts",
      "import": "./loader/index.js",
      "require": "./loader/index.cjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/stencil-component-starter.git"
  },
  "files": [
    "dist/",
    "loader/"
  ],
  "scripts": {
    "build": "stencil build",
    "start": "stencil build --dev --watch --serve",
    "test": "vitest",
    "test:storybook": "test-storybook",
    "generate": "stencil generate",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@stencil/core": "^4.29.2",
    "@storybook/addon-actions": "^8.6.12",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/test-runner": "^0.22.0",
    "@storybook/web-components": "^8.6.12",
    "@storybook/web-components-vite": "^8.6.12",
    "@types/node": "^22.14.0",
    "@vitest/browser": "^3.1.1",
    "lit": "^3.2.1",
    "playwright": "^1.51.1",
    "playwright-chromium": "^1.51.1",
    "storybook": "^8.6.12",
    "vitest": "^3.1.1",
    "vitest-browser-lit": "^0.1.0"
  },
  "license": "MIT",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "playwright-chromium",
      "puppeteer"
    ]
  },
  "engines": {
    "node": ">=23.0.0"
  }
}
